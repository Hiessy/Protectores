@model Protectores.Models.Usuario
@{
    ViewBag.Title = "Login";
}
<h2>@ViewBag.Title</h2>
@using (Html.BeginForm("Login", "Login", FormMethod.Post))
{
    //this  is for create form tag
    @Html.AntiForgeryToken()
    // this is for prevent CSRF attack
    @Html.ValidationSummary(true)

    if (@ViewBag.Message != null)
    {
        <div style="border:1px solid red">
            @ViewBag.Message
        </div>
    }
    <table>
        <tr>
            <td>@Html.LabelFor(a => a.Correo)</td>
            <td>@Html.TextBoxFor(a => a.Correo)</td>
            <td>@Html.ValidationMessageFor(a => a.Correo)</td>
        </tr>
        <tr>
            <td>@Html.LabelFor(a => a.Password)</td>
            <td>@Html.PasswordFor(a => a.Password)</td>
            <td>@Html.ValidationMessageFor(a => a.Password)</td>
        </tr>
        <tr>
            <td></td>
            <td>
                <input type="submit" value="Login" />
            </td>
            <td></td>
        </tr>
    </table>
}

@section Scripts{
    @Scripts.Render("~/bundles/jqueryval")
}
